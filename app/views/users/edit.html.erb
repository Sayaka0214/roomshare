<div class="container">
  <h2>プロフィール編集</h2>
  <% render "shared/error", obj: @user %>
　　<%= form_for @user do |f| %>
　　  
    　<hr>
    　<%= f.file_field :icon, class: "form-control profile-icon" %>
    　
    　<hr>
　　  <div class="field">
        <%= f.label :user_name %><br />
        <%= f.text_field :user_name %>
      </div>
      <hr>
      <div class="field">
        <%= f.label :introduction %><br />
        <%= f.text_area :introduction %>
      </div>
      <hr>
      
      <%= f.submit "更新する" %>
    <% end %>
    
</div>    
