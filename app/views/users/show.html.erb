<div class="container">
  <div class= "col-10 offset-1">
    <h3>ルーム情報登録</h3>
    <hr>
      <%= form_for @room do |f| %>
      <%= f.hidden_field :user_id, value: @user.id %>
        
        <div class"form-group">
        <label>お部屋名</label>
          <%= f.text_field:room_name, class: "form-control" %>
          <hr>
        </div>   
          
        <div class"form-group">
        <label>お部屋紹介</label>
          <%= f.text_area:room_introduction, class: "form-control" %>
          <hr>
        </div>
            
        <div class"form-group">
          <label>料金(1泊あたり)</label>
          <%= f.text_field:room_price, class: "form-control" %>
          <hr>
        </div> 
          
        <div class"form-group">
          <label>住所:都道府県</label>
          <%= f.text_field:room_area, class: "form-control" %>
          <hr>
        </div> 
          
        <div class"form-group">
          <label>住所:都道府県以下</label>
          <%= f.text_field:room_address, class: "form-control" %>
          <hr>
        </div>
          
        <div class"form-group">
          <label>お部屋イメージ</label>
          <%= f.file_field:image, class: "form-control" %>
          <%= f.submit "登録する" %>
          <hr>
        </div>
        
        <div class"form-group">
          <%= f.submit "登録する" %>
        </div>
             
      <% end %>
  </div>
</div>