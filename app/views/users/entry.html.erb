<div class="col-12">
  <div class="container container-fiuld room-posts">
  <p class= "notice"><%= flash.notice %></p>  
  <h4>登録済みルーム一覧</h4>
    <table>
      <thead>
        <tr align="center">
          <th>user id</th>
          <th>ルームイメージ</th>
          <th>ルーム名</th>
          <th>紹介</th>
          <th>料金(/1泊/1室)</th>
          <th>作成日</th>
        </tr>
      </thead>
      <tbody>
        <% @rooms.each do |room| %>
        <tr align="center">
          <td><%= @user.id %></td> 
          <td><%= image_tag room.image, class: 'room-posts-image' %></td>
          <td><%= link_to( room.room_name, "/rooms/#{room.id}" ) %></td>
          <td><%= room.room_introduction %></td>
          <td><%= room.room_price %>円</td>
          <td><%= room.created_at.to_s(:datetime_jp) %></td>
        </tr>  
        <% end %>
      </tbody>
    <table>
  </div>
</div>  
        
